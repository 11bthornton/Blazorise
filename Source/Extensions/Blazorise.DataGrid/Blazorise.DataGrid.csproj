<Project Sdk="Microsoft.NET.Sdk.Razor">

  <Import Project="..\..\..\Build\Blazorise.props" />

  <PropertyGroup>
    <PackageId>Blazorise.DataGrid</PackageId>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <PackageIcon>Blazorise.png</PackageIcon>
    <PackageProjectUrl>https://blazorise.com/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/stsrki/Blazorise</RepositoryUrl>
    <PackageTags>blazorise blazor components datagrid</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="Resources\Localization\DataGrid\de-DE.json" />
    <Content Remove="Resources\Localization\DataGrid\en-US.json" />
    <Content Remove="Resources\Localization\DataGrid\hr-HR.json" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\Localization\DataGrid\de-DE.json" />
    <EmbeddedResource Include="Resources\Localization\DataGrid\en-US.json" />
    <EmbeddedResource Include="Resources\Localization\DataGrid\hr-HR.json" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Blazorise\Blazorise.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\LICENSE.md" Pack="true" Visible="false" PackagePath="" />
    <None Include="..\..\..\NuGet\Blazorise.png" Pack="true" Visible="false" PackagePath="" />
  </ItemGroup>

</Project>
