@typeparam TItem
<Select @ref="@selectRef" ElementId="@ElementId" TValue="int" SelectedValue="@SelectedIndex" SelectedValueChanged="@HandleSelectedValueChanged" Class="@Class" Style="@Style" Size="@Size" MaxVisibleItems="@MaxVisibleItems" TabIndex="@TabIndex" Disabled="@Disabled" Attributes="@Attributes">
    <ChildContent>
        @if ( DefaultItemText != null )
        {
            <SelectItem @key="default" TValue="int" Value="-1" Disabled="@DefaultItemDisabled" Hidden="@DefaultItemHidden">@DefaultItemText</SelectItem>
        }
        @if ( Data != null )
        {
            @for (int i = 0; i < Data.Count; i++)
            {
                var text = TextField != null ? TextField.Invoke(Data[i]) : Data[i].ToString();
                <SelectItem @key="i" TValue="int" Value="@i">@text</SelectItem>
            }
        }
        @ChildContent
    </ChildContent>
    <Feedback>
        @Feedback
    </Feedback>
</Select>