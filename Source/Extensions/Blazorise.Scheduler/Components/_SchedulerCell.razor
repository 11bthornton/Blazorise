<Div Class="b-scheduler-row" Flex="Blazorise.Flex.Default.Grow.Is1.Shrink.Is1" Width="Blazorise.Width.Is100" Height="Height.Px( 60 )" Border="Border.Is1.OnBottom">
    <Div Class="b-scheduler-row-cell" Padding="Blazorise.Padding.Is3" Width="Blazorise.Width.Is100" @onclick="@(() => Console.WriteLine( "item click" ))">
        @foreach ( var appointment in Appointments ?? Enumerable.Empty<SchedulerAppointment>() )
        {
            <Span Background="Background.Warning" Padding="Blazorise.Padding.Is2">
                @appointment.Title
            </Span>
        }
    </Div>
</Div>