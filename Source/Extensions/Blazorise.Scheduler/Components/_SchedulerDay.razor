    <Div Class="b-scheduler-row-cell" Width="Blazorise.Width.Is100" Flex="Flex.Column">
        @for ( int slotIndex = 1; slotIndex <= Slots; ++slotIndex )
        {
            <_SchedulerSlot Index="@slotIndex" Clicked="@OnSlotClick" Last="@(slotIndex == Slots)" />
        }
        @* @foreach ( var appointment in Appointments ?? Enumerable.Empty<SchedulerAppointment>() )
        {
            <Span Background="Background.Warning" Padding="Blazorise.Padding.Is2">
                @appointment.Title
            </Span>
        } *@
    </Div>
</Div>