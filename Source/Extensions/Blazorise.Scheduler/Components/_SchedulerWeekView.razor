<Div Flex="Blazorise.Flex.Default" Width="Width.Is100">
    <_SchedulerHourColumn StartTime="@StartTime" EndTime="@EndTime" ShowDayHeader />

    @if ( SelectedDate.HasValue )
    {
        @for ( var date = SelectedDate; date <= SelectedDate.Value.AddDays( 7 ); date = date?.AddDays( 1 ) )
        {
            <_SchedulerDayColumn StartTime="@StartTime" EndTime="@EndTime" Date="@date" ShowDayHeader />
        }

    }
</Div>