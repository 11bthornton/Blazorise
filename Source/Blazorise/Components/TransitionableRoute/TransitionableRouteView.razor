@namespace Blazorise

@if ( Transition?.RouteData != null )
{
    <CascadingValue Value="@Transition">
        <RouteView RouteData="@Transition.RouteData" DefaultLayout="@DefaultLayout" />
    </CascadingValue>
}

@code {
    [CascadingParameter] public RouteTransition Transition { get; set; }

    [Parameter] public Type DefaultLayout { get; set; }
}
