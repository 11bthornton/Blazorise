@inherits LayoutComponentBase

<Layout>
    <LayoutHeader Fixed="true">
        <Bar Class="top-bar" Breakpoint="Breakpoint.Desktop" Background="Background.Light" ThemeContrast="ThemeContrast.Light">
            <Container>
                <BarBrand>
                    <BarItem>
                        <BarLink Class="top-bar-brand-link" To="">
                            @*<Image Display="Display.InlineBlock" Border="Border.RoundedCircle" Padding="Padding.Is1" Background="Background.White" Source="/img/brand-logo.png" Text="Blazorise logo" />*@
                            Blazorise
                        </BarLink>
                    </BarItem>
                </BarBrand>
                <BarToggler />
                <BarMenu>
                    <BarStart>
                    </BarStart>
                    <BarEnd>
                        <BarItem>
                            <BarLink To="https://commercial.blazorise.com/" Target="Target.Blank" TextColor="TextColor.Primary">Commercial</BarLink>
                        </BarItem>
                        <BarItem>
                            <BarLink To="https://support.blazorise.com/" Target="Target.Blank">Support</BarLink>
                        </BarItem>
                        <BarItem>
                            <BarLink To="docs">Documentation</BarLink>
                        </BarItem>
                    </BarEnd>
                </BarMenu>
            </Container>
        </Bar>
    </LayoutHeader>
    <LayoutContent>
        <Container Fluid="true" Padding="Padding.Is0.OnX">
            @Body
        </Container>
    </LayoutContent>
    <LayoutFooter Padding="Padding.Is4.FromTop.Is5.FromTop.OnDesktop" Margin="Margin.Is5.OnY.OnDesktop" Border="Border.OnTop">
        <Footer />
    </LayoutFooter>
</Layout>