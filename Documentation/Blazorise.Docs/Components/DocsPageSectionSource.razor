<Div Class="docs-page-section-source">
    <Div Class="docs-page-section-source-toolbar">
        <Tooltip Text="@(ShowCode ? "Hide code example" : "Show code example")" Inline>
            <Button TextColor="@ButtonColor">
                <Icon Name="IconName.Code" Clicked="@OnToggleCode" />
            </Button>
        </Tooltip>
        <Tooltip Text="Copy code" Inline>
            <Button TextColor="@ButtonColor">
                <Icon Name="@("fas fa-copy")" Clicked="@OnCopyCode" />
            </Button>
        </Tooltip>
    </Div>
    <Div Class="@SourceCodeClassNames">
        @CodeComponent( CurrentCode )
    </Div>
</Div>
