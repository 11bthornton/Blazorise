@page "/tests/scheduler"
<Row>
    <Column>
        <Card Margin="Margin.Is4.OnY">
            <CardHeader>
                <CardTitle>Scheduler</CardTitle>
            </CardHeader>
            <CardBody>
                <Scheduler Appointments="@Appointments">
                    <SchedulerToolbar />
                    <SchedulerViews>
                        <SchedulerDayView StartTime="@(new TimeOnly( 8, 0 ))" EndTime="@(new TimeOnly( 17, 0 ))" />
                    </SchedulerViews>
                </Scheduler>
            </CardBody>
        </Card>
    </Column>
</Row>
@code {
    List<SchedulerAppointment> Appointments = new List<SchedulerAppointment>
    {
        new SchedulerAppointment( "Meeting with the CEO", "Regarding the new margeting strategy", DateTime.Now, DateTime.Now.AddHours(1) ),
        new SchedulerAppointment( "Lunch with the team", "Discussing the new project", DateTime.Now.AddHours(2), DateTime.Now.AddHours(3) ),
        new SchedulerAppointment( "Meeting with the client", "Discussing the new project", DateTime.Now.AddHours(4), DateTime.Now.AddHours(5) ),
    };
}